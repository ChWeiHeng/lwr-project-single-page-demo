{
    "lwc": { "modules": [{ "dir": "$rootDir/src/modules" },{"npm": "lwc-recipes-oss-ui-components"}] },
    "bundleConfig": { "exclude": ["lwc"] },
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "$rootDir/src/assets",
            "urlPath": "/assets"
        },
        {
            "alias": "assetsDir",
            "dir": "$rootDir/node_modules/@salesforce-ux/design-system/assets",
            "urlPath": "/assets-node"
        }
    ],
    "routes": [
        {
            "id": "example",
            "path": "/",
            "rootComponent": "example/app",
            "layoutTemplate": "$layoutsDir/index.html"
        }
    ]
}
